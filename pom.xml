<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.exasol</groupId>
    <artifactId>bigquery-virtual-schema</artifactId>
    <version>2.2.0</version>
    <name>Virtual Schema for BigQuery</name>
    <description>Virtual Schema for connecting Big Query as a data source to Exasol</description>
    <properties>
        <vscjdbc.version>10.5.0</vscjdbc.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>virtual-schema-common-jdbc</artifactId>
            <version>${vscjdbc.version}</version>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>error-reporting-java</artifactId>
            <version>1.0.1</version>
        </dependency>
        <!-- Unit test dependencies -->
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>virtual-schema-common-jdbc</artifactId>
            <version>${vscjdbc.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest</artifactId>
            <version>2.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.9.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <version>5.2.0</version>
            <scope>test</scope>
        </dependency>
        <!-- Integration test dependencies -->
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>1.17.6</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>jdbc</artifactId>
            <version>1.17.6</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>exasol-test-setup-abstraction-java</artifactId>
            <version>2.0.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>test-db-builder-java</artifactId>
            <version>3.4.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>udf-debugging-java</artifactId>
            <version>0.6.8</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.exasol</groupId>
            <artifactId>hamcrest-resultset-matcher</artifactId>
            <version>1.5.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.cloud</groupId>
            <artifactId>google-cloud-bigquery</artifactId>
            <version>2.23.2</version>
            <scope>test</scope>
        </dependency>
        <!-- Upgrade transitive dependency of google-cloud-bigquery to fix CVE-2022-42003 -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.14.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>virtual-schema-dist-${vscjdbc.version}-bigquery-${project.version}</finalName>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.exasol</groupId>
                <artifactId>artifact-reference-checker-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>/doc/changes/*</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.exasol</groupId>
                <artifactId>project-keeper-maven-plugin</artifactId>
                <version>2.9.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <!-- Fix failing integration tests:
                        java.lang.module.ResolutionException:
                    Module org.glassfish.jakarta.json contains package jakarta.json.stream, module
                    jakarta.json exports package jakarta.json.stream to org.glassfish.jakarta.json -->
                    <useModulePath>false</useModulePath>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.sonatype.ossindex.maven</groupId>
                <artifactId>ossindex-maven-plugin</artifactId>
                <configuration>
                    <excludeVulnerabilityIds>
                        <!-- Transitive test dependency io.netty:netty-handler:4.1.77 used by
                        software.amazon.awssdk:cloudformation -->
                        <!-- We are not affected, see
                        https://github.com/aws/aws-sdk-java-v2/issues/3263 for details -->
                        <exclude>sonatype-2020-0026</exclude>
                        <!-- Transitive test dependency com.google.guava:guava:jar:31.1 used by
                        com.google.cloud:google-cloud-bigquery -->
                        <!-- https://ossindex.sonatype.org/vulnerability/sonatype-2020-0926:
                        Creation of Temporary File in Directory with Incorrect Permissions-->
                        <!-- This is only used in tests, production code is not affected. -->
                        <exclude>sonatype-2020-0926</exclude>
                        <!-- Transitive dependency fr.turri:aXMLRPC used by
                        com.exasol:bucketfs-java.
                        CVE-2020-36641 is reported
                        to be fixed in aXMLRPC 1.12.1. We use version 1.13.0,
                        so
                        this is a false positive. -->
                        <exclude>CVE-2020-36641</exclude>
                        <!-- com.fasterxml.jackson.core:jackson-core:jar:2.14.1 used by
                        com.google.cloud:google-cloud-bigquery is only used for testing. -->
                        <exclude>sonatype-2022-6438</exclude>
                    </excludeVulnerabilityIds>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <url>https://github.com/exasol/bigquery-virtual-schema/</url>
    <parent>
        <artifactId>bigquery-virtual-schema-generated-parent</artifactId>
        <groupId>com.exasol</groupId>
        <version>2.2.0</version>
        <relativePath>pk_generated_parent.pom</relativePath>
    </parent>
</project>
